<div class="container">

  <div class="row justify-content-md-center">
    <div class="col col-lg-6">
      <h1>Edit <%= @cocktail.name %></h1>

      <%= simple_form_for (@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Edit Cocktail 🍸", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <br>
  <div class="row justify-content-md-center">
   <div class="col col-lg-6">
    <%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-info" %>
    </div>
  </div>
</div>


<div class="container">

  <div class="row justify-content-md-center">
    <div class="col col-lg-6">

      <h2>Add Cocktail</h2>

      <%= simple_form_for (@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Add the Cocktail 🍸", class: "btn btn-primary" %>
        <br>
        <br>
        <%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-info" %>
      <% end %>
    </div>
  </div>



</div>
